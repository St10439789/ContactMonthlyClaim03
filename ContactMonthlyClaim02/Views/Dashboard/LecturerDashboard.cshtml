@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Contract Claim System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: lightblue;
            font-family: "Segoe UI", sans-serif;
        }

        .dashboard-card {
            margin-top: 40px;
            padding: 25px;
            background: darkviolet;
            border-radius: 14px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }

        .status-approved {
            color: #28a745 !important;
            font-weight: bold !important;
        }

        .status-pending {
            color: #ffc107 !important;
            font-weight: bold !important;
        }

        .status-rejected {
            color: #dc3545 !important;
            font-weight: bold !important;
        }

        .btn-upload {
            background-color: #0d6efd;
            color: #fff;
        }

            .btn-upload:hover {
                background-color: #0b5ed7;
            }

        .table thead th {
            background-color: #f8f9fa;
        }

        .modal-content {
            border-radius: 12px;
        }

        .page-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        footer {
            margin-top: 40px;
            text-align: center;
            color: #555;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 8px 16px;
        }

            .btn-back:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
      
        <div class="page-title mt-4 mb-4 d-flex justify-content-between align-items-center">
            <h2>💼 Lecturer Dashboard</h2>
            <div>
                <span class="text-muted me-3">@DateTime.Now.ToString("dd MMM yyyy")</span>
                <a href="/Home/Index" class="btn btn-back">🏠 Back to Home</a>
            </div>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

     
        <div class="dashboard-card">
            <div class="row mb-4">
                <div class="col-md-6 mb-2">
                    <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#submitClaimModal">
                        ➕ Submit New Claim
                    </button>
                </div>
            </div>

            <h5 class="mb-3">📄 My Claims</h5>

            <table class="table table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Sessions</th>
                        <th>Hours</th>
                        <th>Amount/Session</th>
                        <th>Total Amount</th>
                        <th>Submitted Date</th>
                        <th>Pre-Approved</th>
                        <th>Pre-Approved Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

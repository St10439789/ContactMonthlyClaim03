    <script>
        function verifyClaim(row) {
            if (!row.data("hours")) return [];

            let hours = row.data("hours");
            let sessions = row.data("sessions");
            let rate = row.data("rate");
            let total = row.data("total");
            let preapproved = row.data("preapproved");

            let errors = [];

            if (hours !== sessions * 2) errors.push("Hours must equal sessions × 2");
            if (total !== sessions * rate) errors.push("Total must equal sessions × rate");
            if (preapproved === "no" && total > 1000) errors.push("Claim exceeds R1000 without pre-approval");

            return errors;
        }

        $(document).ready(function () {
            let total = 0, autoApproved = 0, flagged = 0, rejected = 0;

            $("#claimsTable tbody tr").each(function () {
                const row = $(this);
                const verificationCell = row.find(".verification");
                const errors = verifyClaim(row);

                total++;

                if (errors.length === 0) {
                  
                    row.addClass("valid-row");
                    verificationCell.text("✔ Verified").addClass("text-success");
                    row.find(".status")
                        .removeClass("status-pending status-rejected")
                        .addClass("status-approved")
                        .text("Approved");
                    row.find(".action-buttons").html('<button class="btn btn-outline-secondary btn-sm" disabled>Auto-Approved ✅</button>');

                    autoApproved++;
                } else {
                    row.addClass("invalid-row");
                    verificationCell.text("❌ Errors Found").addClass("text-danger");
                    flagged++;
                }

                if (row.find(".status-rejected").length) rejected++;
            });

      
            $("#totalClaims").text(total);
            $("#autoApproved").text(autoApproved);
            $("#flaggedClaims").text(flagged);
            $("#rejectedClaims").text(rejected);

         
            $(".btn-approve").click(function () {
                const row = $(this).closest("tr");
                const errors = verifyClaim(row);

                if (errors.length > 0) {
                    alert("Cannot approve claim:\n\n" + errors.join("\n"));
                    return;
                }

                row.find(".status")
                    .removeClass("status-pending status-rejected")
                    .addClass("status-approved")
                    .text("Approved");

                row.find(".btn-reject").remove();
                $(this).removeClass("btn-success").addClass("btn-outline-secondary").prop("disabled", true).text("Approved ✅");
            });

            $(".btn-reject").click(function () {
                const row = $(this).closest("tr");

                row.find(".status")
                    .removeClass("status-pending status-approved")
                    .addClass("status-rejected")
                    .text("Rejected");

                row.find(".btn-approve").remove();
                $(this).removeClass("btn-danger").addClass("btn-outline-secondary").prop("disabled", true).text("Rejected ❌");
            });
        });
    </script>


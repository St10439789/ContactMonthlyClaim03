@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: steelblue;
        }

        .login-card {
            margin-top: 80px;
            padding: 30px;
            border-radius: 12px;
            background: #ffffff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .text-link {
            color: #007bff;
            text-decoration: none;
        }

            .text-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="login-card">
                    <h3 class="text-center mb-3">Welcome!</h3>
                    <h3 class="text-center mb-4">Sign In</h3>

                    <form method="post" action="@Url.Action("Login", "Account")">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="you@example.com" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Enter password" required />
                        </div>

                        <div class="mb-3">
                            <label for="role" class="form-label">Role</label>
                            <select class="form-select" id="role" name="Role" required>
                                <option value="">Select Role</option>
                                <option value="Lecturer">Lecturer</option>
                                <option value="ProgrammeCoordinator">Programme Coordinator</option>
                                <option value="HR">HR</option>
                                <option value="AcademicManager">Academic Manager</option>
                            </select>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                        </div>

                        <div class="text-center">
                            <a href="@Url.Action("ForgotPassword", "Account")" class="text-link">Forgot password?</a><br />
                            <a href="@Url.Action("Register", "Account")" class="text-link">Don't have an account? Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

